datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              String        @id @default(auto()) @map("_id") @db.ObjectId
  email           String        @unique
  name            String
  password        String
  faceDescriptors Float[]
  TestSession     TestSession[]
  TestTaker       TestTaker[]
}

model Test {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  TestSession TestSession[]
  questions   Json // { id: string, question: string, options: { id: string, option: string, isCorrect: boolean }[] }[]
  TestTaker   TestTaker[]
}

model TestSession {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  test   Test   @relation(fields: [testId], references: [id])
  testId String @map("testId") @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])
  userId String @map("userId") @db.ObjectId
  status String

  startTime DateTime
  endTime   DateTime?
  answers   Json
  events    Json // { code: string, message: string, severity: string, timestamp: string, resolved: boolean }[]
}

model TestTaker {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  test   Test   @relation(fields: [testId], references: [id])
  testId String @map("testId") @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])
  userId String @map("userId") @db.ObjectId
  status String

  startTime DateTime
  endTime   DateTime?
}
